  function getVowels(str) {                                       //Return the vowels in the given string.
    let vowels = "aeiou";                                        //We will consider a, e, i, o, u as vowels for this data
    let result = "";                                              //The input string will only consist of lower case letters and or spaces.
  
    for (let char of str.toLowerCase()) {                        //#Example : 'test' ----> 'e'
      if (vowels.includes(char)) {                               //#Example : 'tablet' ----> 'a,e'
        result += char + ",";
      }
    }
  
   return result.slice(0, -1);
  }
  
  console.log(getVowels('test'))
  console.log(getVowels('CynthiA-dikE'))
  console.log(getVowels('tablet'))